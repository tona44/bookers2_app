<!--成功メッセージ-->
<p id="notice">
  <%= notice %>
</p>


<!-- サイドバー -->
<div>
  <%= render 'users/userinfo',user: @user %>  <!--User info 部分テンプレート-->
  <%= render 'books/newbook',book: @book %>  <!--New book 部分テンプレート-->
</div>


<h2>Book detail</h2>

<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
         <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format:'jpeg', fallback: "no_image.jpg",size:'40x40' %><br>
         <%= @user.name %>
        <% end %>
      </td>
      
      <td><%= link_to @book.title, book_path(@book) %></td>
      
      <td><%= @book.body %></td>
      
      <!--投稿編集ボタン (投稿時のcreateアクションで ~user==current_user の定義が必要)-->
      <td>
        <% if @user == current_user %>
        <%= link_to "Edit",edit_book_path(@book) %>
        <% end %>
      </td>
      
      <!--投稿削除ボタン (投稿時のcreateアクションで ~user==current_user の定義が必要)-->
      <td>
        <% if @user == current_user %>
          <%= link_to "Destroy",books_path, method: :delete %>
        <% end %>
      </td>
    </tr>
  </tbody>
  
</table>