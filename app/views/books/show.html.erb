<!--処理成功メッセージ-->
<p id="notice">
  <%= notice %>
</p>

<div class="container px-5 px-sm-0">
<div class="row">

<!-- サイドバー -->
<div class="col-md-3">
  <%= render 'users/userinfo',user: @user %>  <!--User info 部分テンプレート-->
  <%= render 'books/newbook',book: @book_new %>  <!--New book 部分テンプレート-->
</div>


<!--ブック詳細-->
<div  class="col-md-8 offset-md-1">
<h2>Book detail</h2>

<table class="table table-hover table-invirse">
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
         <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format:'jpeg', fallback: "no_image.jpg",size:'40x40' %><br>
         <%= @user.name %>
        <% end %>
      </td>

      <td>
        <%= link_to @book.title, book_path(@book) %>
      </td>

      <td>
        <%= @book.body %>
      </td>

      <!--いいね機能-->
      <% if @book.favorited_by?(current_user) %>

      <td>
        <%= link_to book_favorites_path(@book), method: :delete do %>
          ❤ <%= @book.favorites.count %>
        <% end %>
      </td>
      <% else %>
      <td>
        <%= link_to book_favorites_path(@book), method: :post do %>
          ♡ <%= @book.favorites.count %>
        <% end %>
      </td>

      <% end %>

      <!--コメント機能(表示)-->
      <td>
        コメント数: <%= @book.book_comments.count %>
      </td>

      <!--投稿編集ボタン-->
      <td>
        <% if @user == current_user %>
        <%= link_to "Edit",edit_book_path(@book) ,class:"btn btn-success"%>
        <% end %>
      </td>

      <!--投稿削除ボタン-->
      <td>
        <% if @user == current_user %>
          <%= link_to "Destroy",book_path(@book), method: :delete ,class:"btn btn-danger", "data-confirm"=>"本当に消しますか？" %>
        <% end %>
      </td>

    </tr>
  </tbody>
</table>


<!--コメント機能(一覧)-->
<table>
<% @book.book_comments.each do |book_comment| %>
 <tr>
  <td>
   <%= link_to user_path(book_comment.user) do %>
     <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, format:'jpeg', fallback: "no_image.jpg",size:'40x40' %><br>
     <%= book_comment.user.name %>
   <% end %>
  </td>
  <td>
   <%= book_comment.comment %>
  </td>
  <td>
   <% if book_comment.user == current_user %>
   <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:"btn-sm btn-danger" %>
   <% end %>
  </td>
 </tr>
<% end %>
</table>

<!--コメント機能(投稿)-->
<div>
  <%= form_with(model:[@book,@book_comment],local: true) do |f| %>
    <%= f.text_area :comment, rows:'5', cols:"80"%><br>
    <%= f.submit "送信" %>
  <% end %>
</div>



</div>

</div>
</div>