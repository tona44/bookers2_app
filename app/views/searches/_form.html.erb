<!--検索フォーム　部分テンプレート-->

<% if user_signed_in? %>  <!--ログイン時のみ表示-->

<%= form_with url: search_path, method: :get, local: true do |f|%>  <!--method::get をあえて指定(結果を早く表示させる為)-->
  <%= f.text_field 'search[content]' %>
  <%= f.select 'search[model]',options_for_select({"User"=>"user", "Book"=>"book"})%>  <!--選択肢"User"で入力された情報が"user"に格納される(コントローラに送られる)-->
  <%= f.select 'search[method]',options_for_select({"完全一致"=>"perfect_match","前方一致"=>"forward_match", "後方一致"=>"backward_match", "部分一致"=>"partial_match"}) %>
  <%= f.submit '検索' %>
<% end %>

<% end %>
