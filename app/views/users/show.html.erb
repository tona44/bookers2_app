<!--views/users/show-->
<!--処理成功メッセージ-->


<!-- サイドバー -->
<div>
  <%= render 'users/userinfo',user: @user %>  <!--User info 部分テンプレート-->
  <%= render 'books/newbook',book: @book %>  <!--New book 部分テンプレート-->
</div>



<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <!--ログインユーザーの個人投稿一覧-->
    <% @books.each do |book| %>
    <tr>
       <td>
         <%= link_to user_path(book.user.id) do %>
           <%= attachment_image_tag book.user,:profile_image %>
         <% end %>
       </td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
        
    <% end %>

    </tr>
  </tbody>
  
</table>